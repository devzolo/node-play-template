{
  "name": "node-play-template-monorepo",
  "version": "0.0.1",
  "description": "monorepo for node-play-template and friends",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "engines": {
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devzolo/node-play-template.git"
  },
  "scripts": {
    "build": "pnpm -r --filter=./packages/* build",
    "check": "pnpm -r --filter=./packages/* check",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish",
    "release:verify": "pnpm lint && pnpm build",
    "release:version": "pnpm changeset:version",
    "release:publish": "pnpm changeset:publish",
    "bench": "node --allow-natives-syntax ./benchmarking/run.js",
    "bench:compare": "node --allow-natives-syntax ./benchmarking/compare/index.js",
    "bench:debug": "node --allow-natives-syntax --inspect-brk ./benchmarking/run.js",
    "test": "pnpm -r --filter=./packages/* test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3"
  }
}
