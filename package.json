{
  "name": "@devzolo/node-play-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "repository": "https://github.com/devzolo/node-play-template",
  "publishConfig": {
    "@devzolo:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prebuild": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "build": "swc src -d dist --copy-files --strip-leading-paths --ignore \"src/**/*.test.ts\" --ignore \"src/**/__test__/**\"",
    "postbuild": "tsc --emitDeclarationOnly",
    "dev": "node --env-file=.env nodemon",
    "dev:simple": "node --env-file=.env --import tsx --watch --clear-screen=false src/index.ts",
    "dev:watch": "node --env-file=.env --watch --import tsx src/index.ts",
    "start": "node --env-file=.env dist/index.js",
    "test": "set NODE_ENV=test&& set NODE_OPTIONS=--experimental-vm-modules&& jest",
    "test:watch": "set NODE_ENV=test&& set NODE_OPTIONS=--experimental-vm-modules&& jest --watch",
    "test:coverage": "set NODE_ENV=test&& set NODE_OPTIONS=--experimental-vm-modules&& jest --coverage",
    "lint": "eslint . --fix --max-warnings=0",
    "lint:check": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.31",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.9",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912"
}
